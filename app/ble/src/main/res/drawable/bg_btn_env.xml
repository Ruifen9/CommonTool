<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#ddd" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <ripple android:color="#3F51B5">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#7ED1F6" />
                    <padding
                        android:left="16dp"
                        android:right="16dp"
                        android:top="8dp"
                        android:bottom="8dp"/>
                </shape>

            </item>
        </ripple>
    </item>
</selector>